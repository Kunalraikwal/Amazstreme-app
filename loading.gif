import imageio
from PIL import Image, ImageDraw
import math

# Settings
size = 128
duration = 1.0
fps = 15
frames = int(duration * fps)
primary_color = "#FF0000"  # YouTube red
bg_color = "#0A0F14"

# Create frames
images = []
for i in range(frames):
    img = Image.new("RGBA", (size, size), bg_color)
    draw = ImageDraw.Draw(img)

    # Angle for animation
    angle = (i / frames) * 360
    
    # Arc size
    arc_length = 90  # Quarter circle

    # Arc bounds
    bounds = [8, 8, size - 8, size - 8]

    # Draw arc
    draw.arc(
        bounds,
        start=angle,
        end=angle + arc_length,
        fill=primary_color,
        width=6
    )

    images.append(img)

# Save as GIF
imageio.mimsave("youtube_style_spinner.gif", images, duration=1 / fps, loop=0)

print("YouTube-style loading GIF created successfully!")
